import { NextRequest, NextResponse } from 'next/server';
import { getZEREZClient } from '@/lib/zerez-graphql-client';
import { validateUUIDArray, findDuplicates } from '@/lib/api-validation-utils';

// Disable response caching
export const dynamic = 'force-dynamic';
export const runtime = 'nodejs';

export async function POST(request: NextRequest) {
  try {
    const body = await request.json();
    const { unitIds } = body;

    // Validate: unitIds must be a valid UUID array (max 100 units per request)
    const validation = validateUUIDArray('unitIds', unitIds, { maxLength: 100 });
    if (!validation.valid) {
      return NextResponse.json(
        {
          error: validation.error,
          message: validation.error,
          details: validation.invalidItems?.slice(0, 5), // Show first 5 with reasons
          totalInvalid: validation.invalidItems?.length
        },
        { status: 400 }
      );
    }

    // Validate: check for duplicate IDs
    const duplicateError = findDuplicates(unitIds);
    if (duplicateError) {
      return NextResponse.json(
        {
          error: 'Duplicate unit IDs',
          message: duplicateError.message
        },
        { status: 400 }
      );
    }

    // Fetch detailed units using TypeScript GraphQL client
    const client = await getZEREZClient();
    const result = await client.fetchDetailedUnits(unitIds);

    // Check if any units failed to fetch
    if (result.failed > 0) {
      console.warn(`[fetch-detailed] ${result.failed} of ${result.total} units failed to fetch`);
    }

    return NextResponse.json({
      units: result.units,
      total: result.total,
      fetched: result.fetched,
      failed: result.failed
    });

  } catch (error) {
    console.error('[fetch-detailed] Error:', error);
    return NextResponse.json(
      {
        error: 'Internal server error',
        message: error instanceof Error ? error.message : 'Unknown error'
      },
      { status: 500 }
    );
  }
}
