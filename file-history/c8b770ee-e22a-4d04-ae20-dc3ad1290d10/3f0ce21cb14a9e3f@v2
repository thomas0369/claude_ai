// PM2 Autonomous Process Manager for App Ideas Workspace
// Auto-starts all development services, restarts on crashes, manages logs
//
// Usage:
//   pm2 start ecosystem.config.js        # Start all services
//   pm2 save                              # Save configuration
//   pm2 startup                           # Enable auto-start on boot
//   pm2 logs                              # View all logs
//   pm2 monit                             # Monitor resources

module.exports = {
  apps: [
    // ==========================================
    // Block Puzzle Hero - Next.js Game
    // ==========================================
    {
      name: 'block-puzzle-hero',
      script: 'npm',
      args: 'run dev',
      cwd: './block-puzzle-hero',

      // Auto-restart configuration
      autorestart: true,
      watch: false,  // Don't watch files (Next.js has its own HMR)
      max_restarts: 10,  // Prevent infinite restart loops
      min_uptime: '10s',  // Must run 10s to be considered started

      // Environment
      env: {
        NODE_ENV: 'development',
        PORT: 3000,
      },
      env_production: {
        NODE_ENV: 'production',
        PORT: 3000,
      },

      // Logging
      error_file: './block-puzzle-hero/logs/pm2-error.log',
      out_file: './block-puzzle-hero/logs/pm2-out.log',
      log_date_format: 'YYYY-MM-DD HH:mm:ss Z',
      combine_logs: true,
      merge_logs: true,

      // Resource limits
      max_memory_restart: '500M',  // Restart if exceeds 500MB

      // Crash handling
      kill_timeout: 5000,
      wait_ready: false,
      listen_timeout: 10000,
    },

    // ==========================================
    // Elliott Wave Trading Bot - Test Runner
    // ==========================================
    {
      name: 'elliott-wave-tests',
      script: 'npm',
      args: 'run test:headed',
      cwd: './elliott-wave-trading-bot',

      // Don't auto-restart tests (they finish and exit)
      autorestart: false,
      watch: false,

      // Environment
      env: {
        NODE_ENV: 'test',
      },

      // Logging
      error_file: './elliott-wave-trading-bot/logs/pm2-error.log',
      out_file: './elliott-wave-trading-bot/logs/pm2-out.log',
      log_date_format: 'YYYY-MM-DD HH:mm:ss Z',
    },

    // ==========================================
