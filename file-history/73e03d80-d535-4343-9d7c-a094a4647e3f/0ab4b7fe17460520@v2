/**
 * Verify White Theme Design
 *
 * Confirms that the game uses white theme and bigger grid
 */

import { test, expect } from '@playwright/test';

test('Game page uses white theme with bigger grid', async ({ page }) => {
  console.log('=== Loading Level 1 ===');
  await page.goto('http://localhost:3003/play/1');

  // Wait longer for game to fully load
  console.log('=== Waiting for game to load ===');
  await page.waitForTimeout(8000);

  console.log('=== Taking Screenshot ===');
  await page.screenshot({
    path: 'white-theme-verification.png',
    fullPage: true
  });

  console.log('âœ… White theme verification complete');
  console.log('ðŸ“¸ Screenshot saved to white-theme-verification.png');
  console.log('');
  console.log('ðŸŽ¨ Verify the following:');
  console.log('  - GameHUD uses WHITE background');
  console.log('  - Score display is BLUE (not yellow/dark)');
  console.log('  - Game grid is LARGER (65px cells vs 50px)');
  console.log('  - Game grid has light background (#f8fafc)');
});
