const { chromium } = require('playwright');

(async () => {
  const browser = await chromium.launch({ headless: false });
  const page = await browser.newPage({ viewport: { width: 1920, height: 1080 } });

  try {
    await page.goto('http://localhost:3000/import/zerez');
    await page.waitForLoadState('networkidle');
    await page.waitForTimeout(15000);

    await page.click('button:has-text("Preview Products")');
    await page.waitForTimeout(8000);

    const virtualizedTable = await page.locator('div.border.rounded-lg.overflow-hidden').count();
    console.log('Virtualized table container found:', virtualizedTable > 0);

    const renderedRows = await page.locator('div[style*="position: absolute"]').count();
    console.log('Rendered rows in DOM:', renderedRows);

    const totalProducts = await page.locator('text=Found 20').count();
    console.log('Product count text found:', totalProducts > 0);

    await page.screenshot({ path: '/mnt/c/Workspace/C&I BESS/screenshots/virtualized-verify.png', fullPage: true });

    await page.waitForTimeout(5000);
  } catch (error) {
    console.error('Error:', error.message);
  } finally {
    await browser.close();
  }
})();
