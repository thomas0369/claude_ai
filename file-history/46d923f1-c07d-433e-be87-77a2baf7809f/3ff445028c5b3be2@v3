<body>
    <div class="container">
        <div class="header">
            <h1>ðŸŽ¯ Elliott Wave Live Signals</h1>
            <p>Real-time scanning â€¢ Claude CLI Integration â€¢ Cache-optimized</p>
        </div>

        <div class="controls">
            <button id="scanBtn" onclick="startScan()">Start Scan</button>

            <label>
                <input type="checkbox" id="useClaude" checked>
                Use Claude CLI
            </label>

            <label>
                <input type="checkbox" id="useCache" checked>
                Use Cache
            </label>

            <span id="statusText" style="margin-left: auto; font-size: 13px; color: #94a3b8;"></span>
        </div>

        <div class="stats" id="stats" style="display: none;">
            <!-- Stats werden hier eingefÃ¼gt -->
        </div>

        <div id="content">
            <div class="loading">
                <h3>Bereit zum Scannen</h3>
                <p style="color: #94a3b8; margin-top: 8px;">Klicke "Start Scan" um zu beginnen</p>
            </div>
        </div>
    </div>

    <script>
        const API_URL = 'http://localhost:5000/api';
        let signals = [];

        async function startScan() {
            const btn = document.getElementById('scanBtn');
            const content = document.getElementById('content');
            const stats = document.getElementById('stats');
            const statusText = document.getElementById('statusText');
            const useClaude = document.getElementById('useClaude').checked;
            const useCache = document.getElementById('useCache').checked;

            // UI aktualisieren
            btn.disabled = true;
            btn.textContent = 'Scanning...';
            content.innerHTML = '<div class="loading"><h3>Scanning Markets...</h3><p style="color: #94a3b8; margin-top: 8px;">Analysiere Assets ' + (useClaude ? 'mit Claude CLI Integration' : 'nur mit Screener') + '</p></div>';
            stats.style.display = 'none';

            try {
                console.log('Starting scan request...');
                const response = await fetch(`${API_URL}/scan`, {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    },
                    body: JSON.stringify({
                        min_score: 75,
                        use_claude: useClaude,
                        use_cache: useCache
                    })
                });

                console.log('Response status:', response.status);
                const data = await response.json();
                console.log('Received data:', data);

                if (data.success) {
                    signals = data.signals;
                    console.log(`Displaying ${signals.length} signals`);
                    displaySignals(signals);
                    displayStats(data.scan_info);

                    const duration = data.scan_info.duration_seconds.toFixed(1);
                    statusText.textContent = `Letzter Scan: ${new Date().toLocaleTimeString('de-DE')} (${duration}s)`;
                } else {
                    console.error('Scan failed:', data.error);
                    content.innerHTML = `<div class="loading"><h3 style="color: #f87171;">Fehler</h3><p style="color: #fca5a5; margin-top: 8px;">${data.error || 'Unknown error'}</p></div>`;
                }
            } catch (error) {
                console.error('Fetch error:', error);
                content.innerHTML = `<div class="loading"><h3 style="color: #f87171;">Verbindungsfehler</h3><p style="color: #fca5a5; margin-top: 8px;">${error.message}<br><br>Server URL: ${API_URL}/scan<br>Tipp: Ã–ffne die Browser-Konsole (F12) fÃ¼r mehr Details</p></div>`;
            } finally {
                btn.disabled = false;
                btn.textContent = 'Start Scan';
            }
        }

        function displayStats(scanInfo) {
            const stats = document.getElementById('stats');
            stats.style.display = 'grid';

            stats.innerHTML = `
                <div class="stat-card" style="border-left: 4px solid #48bb78;">
                    <div class="stat-label">Qualified Signals</div>
                    <div class="stat-value">${scanInfo.qualified_signals}</div>
                </div>
                <div class="stat-card" style="border-left: 4px solid #667eea;">
                    <div class="stat-label">Total Scanned</div>
                    <div class="stat-value">${scanInfo.total_scanned}</div>
                </div>
                <div class="stat-card" style="border-left: 4px solid #fbbf24;">
                    <div class="stat-label">Duration</div>
                    <div class="stat-value">${scanInfo.duration_seconds.toFixed(1)}s</div>
                </div>
                <div class="stat-card" style="border-left: 4px solid #a78bfa;">
                    <div class="stat-label">Analysis Mode</div>
                    <div class="stat-value" style="font-size: 16px;">${scanInfo.used_claude ? 'Claude AI' : 'Screener'}</div>
                </div>
            `;
        }

        function displaySignals(signals) {
            console.log('displaySignals called with:', signals);
            const content = document.getElementById('content');
            console.log('content element:', content);

            if (signals.length === 0) {
                console.log('No signals to display');
                content.innerHTML = '<div class="loading"><h3>Keine Signale gefunden</h3><p style="color: #94a3b8; margin-top: 8px;">Keine Setups >= 75 Punkte</p></div>';
                return;
            }

            console.log(`Processing ${signals.length} signals...`);
            const signalsHtml = signals.map((signal, index) => {
                console.log(`Processing signal ${index}:`, signal.symbol);
                const displayScore = signal.enhanced_score || signal.score;
                const hasClaude = !!signal.claude_analysis;
                const direction = signal.direction === 'long' ? 'bullish' : 'bearish';

                return `
                    <div class="signal-card ${hasClaude ? 'has-claude' : direction}">
                        ${hasClaude ? '<div class="claude-badge">ðŸ§  Claude Analyzed</div>' : ''}

                        <div class="signal-header" style="margin-top: ${hasClaude ? '12px' : '0'};">
                            <div>
                                <div style="display: flex; align-items: center; gap: 12px; margin-bottom: 8px;">
                                    <span class="signal-symbol">${signal.symbol}</span>
                                    <span class="badge ${signal.direction === 'long' ? 'badge-long' : 'badge-short'}">
                                        ${signal.direction === 'long' ? 'ðŸš€ LONG' : 'ðŸ“‰ SHORT'}
                                    </span>
                                    <span style="font-size: 11px; color: #94a3b8; background: #334155; padding: 4px 8px; border-radius: 6px;">
                                        ${signal.category}
                                    </span>
                                </div>
                                <div style="font-size: 13px; color: #94a3b8;">
                                    $${signal.current_price.toFixed(signal.category.includes('Forex') ? 4 : 2)}
                                    ${hasClaude ? ` â€¢ Confidence: ${(signal.claude_analysis.confidence * 100).toFixed(0)}%` : ''}
                                </div>
                            </div>
                            <div style="text-align: right;">
                                <div class="signal-score ${displayScore >= 85 ? 'high' : ''}">${displayScore}</div>
                                ${hasClaude && signal.score !== displayScore ? `<div style="font-size: 11px; color: #94a3b8; margin-top: 4px;">Base: ${signal.score}</div>` : ''}
                            </div>
                        </div>

                        ${hasClaude && signal.claude_analysis.justification ? `
                            <div class="claude-analysis">
                                <div class="claude-analysis-title">âœ¨ Claude's Analysis</div>
                                <div class="claude-analysis-text">${signal.claude_analysis.justification}</div>
                                ${signal.claude_analysis.wave_count ? `<div style="margin-top: 8px; font-size: 12px; color: #94a3b8;">Wave Count: ${signal.claude_analysis.wave_count}</div>` : ''}
                            </div>
                        ` : ''}
                    </div>
                `;
            }).join('');

            console.log('Generated HTML length:', signalsHtml.length);
            console.log('Setting content.innerHTML...');
            content.innerHTML = `<div class="signals-grid">${signalsHtml}</div>`;
            console.log('Content updated successfully!');
        }
    </script>
</body>
</html>
