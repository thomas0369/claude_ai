name: Deploy to GitHub Pages

on:
  push:
    branches: [ main ]
  schedule:
    # Deploy daily at 09:00 MEZ
    - cron: '0 8 * * *'
  workflow_dispatch:

# Sets permissions of the GITHUB_TOKEN to allow deployment to GitHub Pages
permissions:
  contents: read
  pages: write
  id-token: write

# Allow only one concurrent deployment
concurrency:
  group: "pages"
  cancel-in-progress: false

jobs:
  build:
    runs-on: ubuntu-latest
    steps:
      - name: Checkout
        uses: actions/checkout@v4

      - name: Setup Pages
        uses: actions/configure-pages@v4

      - name: Build site
        run: |
          # Create _site directory for GitHub Pages
          mkdir -p _site

          # Copy HTML files
          cp index.html _site/
          cp dashboard.html _site/

          # Copy TRADING_DASHBOARD.md
          cp TRADING_DASHBOARD.md _site/

          # Copy data directory
          cp -r data _site/

          # Create a simple index redirect
          cat > _site/README.md << 'EOF'
          # Elliott Wave Trading Bot - Live Dashboard

          ## ðŸ“Š Available Dashboards

          - [**Live Signals Dashboard**](index.html) - Real-time trading signals with interactive charts
          - [**Performance Dashboard**](dashboard.html) - Strategy performance and recommendations
          - [**Trading Dashboard (MD)**](TRADING_DASHBOARD.md) - Detailed trading information

          ## ðŸš€ Quick Links

          - [GitHub Repository](https://github.com/thomas0369/elliott-wave-trading-bot)
          - [Documentation](docs/)

          ---

          Last Updated: $(date -u +"%Y-%m-%d %H:%M:%S UTC")
          EOF

      - name: Upload artifact
        uses: actions/upload-pages-artifact@v3
        with:
          path: '_site'

  deploy:
    environment:
      name: github-pages
      url: ${{ steps.deployment.outputs.page_url }}
    runs-on: ubuntu-latest
    needs: build
    steps:
      - name: Deploy to GitHub Pages
        id: deployment
        uses: actions/deploy-pages@v4
