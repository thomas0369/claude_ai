    <script>
        const API_URL = 'http://localhost:5000/api';
        let currentTab = 'pipeline';
        let autoRefreshInterval = null;

        // Tab Switching
        function switchTab(tabName) {
            // Hide all tabs
            document.querySelectorAll('.tab-content').forEach(tab => {
                tab.classList.remove('active');
            });

            // Deactivate all buttons
            document.querySelectorAll('.tab-button').forEach(btn => {
                btn.classList.remove('active');
            });

            // Show selected tab
            document.getElementById(`tab-${tabName}`).classList.add('active');
            event.target.classList.add('active');

            currentTab = tabName;

            // Load tab data
            loadTabData(tabName);
        }

        // Load data for specific tab
        function loadTabData(tabName) {
            switch(tabName) {
                case 'pipeline':
                    loadPipelineData();
                    break;
                case 'timeframes':
                    // Timeframe tab is interactive, no auto-load needed
                    break;
                case 'quality':
                    runQualityCheck();
                    break;
                case 'signals':
                    // Signals tab is on-demand
                    break;
                case 'claude':
                    loadClaudeData();
                    break;
                case 'history':
                    loadHistoryData();
                    break;
                case 'macro':
                    loadMacroData();
                    break;
            }
        }

        // Initialize dashboard
        async function init() {
            console.log('Initializing dashboard...');

            // Load initial data
            await loadSystemStatus();
            await loadPipelineData();

            // Setup auto-refresh (every 60 seconds)
            autoRefreshInterval = setInterval(async () => {
                await loadSystemStatus();
                if (currentTab === 'pipeline') {
                    await loadPipelineData();
                } else if (currentTab === 'quality') {
                    await runQualityCheck();
                }
            }, 60000);

            console.log('Dashboard initialized');
        }

        // Load system status
        async function loadSystemStatus() {
            try {
                const response = await fetch(`${API_URL}/twelvedata/status`);
                const data = await response.json();

                if (data.success) {
                    document.getElementById('apiCalls').textContent = `${data.calls_today}/800`;
                    document.getElementById('cacheQuality').textContent = `${data.cache_stats.total_symbols} symbols`;
                    document.getElementById('lastUpdate').textContent = new Date().toLocaleTimeString();
                }
            } catch (error) {
                console.error('Error loading system status:', error);
            }
        }

        // ========================================================================
        // TAB 1: DATA PIPELINE
        // ========================================================================

        async function loadPipelineData() {
            try {
                // Load TwelveData status
                const statusResponse = await fetch(`${API_URL}/twelvedata/status`);
                const statusData = await statusResponse.json();

                if (statusData.success) {
                    document.getElementById('apiStatus').textContent = statusData.api_status;
                    document.getElementById('callsToday').textContent = statusData.calls_today;
                    document.getElementById('rateLimitHealth').textContent = `${statusData.rate_limit_health}%`;

                    const cacheSizeMB = statusData.cache_stats.total_size_mb.toFixed(2);
                    document.getElementById('cacheSize').textContent = `${cacheSizeMB} MB`;
                    document.getElementById('symbolsCached').textContent = `${statusData.cache_stats.total_symbols} symbols`;

                    // Update progress bar
                    const progress = document.getElementById('rateLimitProgress');
                    progress.style.width = `${statusData.rate_limit_health}%`;

                    if (statusData.rate_limit_health >= 80) {
                        progress.className = 'progress-fill excellent';
                    } else if (statusData.rate_limit_health >= 60) {
                        progress.className = 'progress-fill good';
                    } else if (statusData.rate_limit_health >= 40) {
                        progress.className = 'progress-fill fair';
                    } else {
                        progress.className = 'progress-fill poor';
                    }
                }

                // Load symbol status
                const symbolsResponse = await fetch(`${API_URL}/twelvedata/symbols`);
                const symbolsData = await symbolsResponse.json();

                if (symbolsData.success) {
                    displaySymbolTable(symbolsData.symbols);
                }

            } catch (error) {
                console.error('Error loading pipeline data:', error);
                document.getElementById('symbolTableContainer').innerHTML = `
                    <div class="alert alert-error">
                        <span>‚ùå</span>
                        <span>Error loading pipeline data: ${error.message}</span>
                    </div>
                `;
            }
        }

        function displaySymbolTable(symbols) {
            const container = document.getElementById('symbolTableContainer');

            let html = `
                <table class="data-table">
                    <thead>
                        <tr>
                            <th>Symbol</th>
                            <th>Status</th>
                            <th>Last Fetch</th>
                            <th>Candles</th>
                            <th>Freshness</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
            `;

            symbols.forEach(symbol => {
                const ageText = symbol.last_fetch_minutes !== null
                    ? `${symbol.last_fetch_minutes} min ago`
                    : 'Never';

                const statusClass = symbol.status === 'LIVE' ? 'excellent' :
                                   symbol.status === 'STALE' ? 'fair' : 'poor';

                html += `
                    <tr>
                        <td><strong>${symbol.symbol}</strong></td>
                        <td>
                            <span class="status-badge ${statusClass}">
                                ${symbol.status_emoji} ${symbol.status}
                            </span>
                        </td>
                        <td>${ageText}</td>
                        <td>${symbol.candles}</td>
                        <td>
                            <div class="progress-bar">
                                <div class="progress-fill ${statusClass}" style="width: ${symbol.freshness}%;"></div>
                            </div>
                            ${symbol.freshness}%
                        </td>
                        <td>
                            <button class="btn btn-secondary" style="padding: 6px 12px; font-size: 12px;"
                                    onclick="refreshSymbol('${symbol.symbol}')">
                                üîÑ Refresh
                            </button>
                        </td>
                    </tr>
                `;
            });

            html += `
                    </tbody>
                </table>
            `;

            container.innerHTML = html;
        }

        async function refreshSymbol(symbol) {
            try {
                const response = await fetch(`${API_URL}/twelvedata/refresh`, {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({ symbols: [symbol] })
                });

                const data = await response.json();

                if (data.success) {
                    alert(`‚úÖ ${symbol} refreshed successfully!`);
                    await loadPipelineData();
                } else {
                    alert(`‚ùå Error refreshing ${symbol}: ${data.error}`);
                }
            } catch (error) {
                alert(`‚ùå Error: ${error.message}`);
            }
        }

        async function refreshAllData() {
            if (!confirm('Refresh all symbols? This will use API calls.')) return;

            try {
                const response = await fetch(`${API_URL}/twelvedata/refresh`, {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({})
                });

                const data = await response.json();

                if (data.success) {
                    alert('‚úÖ All symbols refreshed successfully!');
                    await loadPipelineData();
                } else {
                    alert(`‚ùå Error: ${data.error}`);
                }
            } catch (error) {
                alert(`‚ùå Error: ${error.message}`);
            }
        }

        // ========================================================================
        // TAB 2: TIMEFRAME ENGINE
        // ========================================================================

        async function loadAvailableTimeframes() {
            const symbol = document.getElementById('tfSymbolSelect').value;
            if (!symbol) return;

            const container = document.getElementById('availableTimeframesContainer');
            container.innerHTML = '<div class="spinner"></div>';

            try {
                const response = await fetch(`${API_URL}/timeframes/available?symbol=${encodeURIComponent(symbol)}`);
                const data = await response.json();

                if (data.success) {
                    displayAvailableTimeframes(data.available_timeframes, data.source_candles);
                    document.getElementById('sourceCandles').value = data.source_candles;
                } else {
                    container.innerHTML = `
                        <div class="alert alert-error">
                            <span>‚ùå</span>
                            <span>${data.error}</span>
                        </div>
                    `;
                }
            } catch (error) {
                container.innerHTML = `
                    <div class="alert alert-error">
                        <span>‚ùå</span>
                        <span>Error: ${error.message}</span>
                    </div>
                `;
            }
        }

        function displayAvailableTimeframes(timeframes, sourceCandles) {
            const container = document.getElementById('availableTimeframesContainer');

            let html = `
                <div class="alert alert-success" style="margin-bottom: 16px;">
                    <span>üìä</span>
                    <span>Source: ${sourceCandles} candles (5m)</span>
                </div>
                <table class="data-table">
                    <thead>
                        <tr>
                            <th>Timeframe</th>
                            <th>Candles</th>
                            <th>Status</th>
                        </tr>
                    </thead>
                    <tbody>
            `;

            timeframes.forEach(tf => {
                const statusClass = tf.quality === 'EXCELLENT' ? 'excellent' :
                                   tf.quality === 'GOOD' ? 'good' :
                                   tf.quality === 'FAIR' ? 'fair' : 'poor';

                html += `
                    <tr>
                        <td><strong>${tf.timeframe}</strong></td>
                        <td>${tf.estimated_candles}</td>
                        <td>
                            <span class="status-badge ${statusClass}">
                                ${tf.status}
                            </span>
                        </td>
                    </tr>
                `;
            });

            html += `
                    </tbody>
                </table>
            `;

            container.innerHTML = html;
        }

        async function calculateCustomTimeframe() {
            const minutes = parseInt(document.getElementById('customMinutes').value);
            const sourceCandles = parseInt(document.getElementById('sourceCandles').value);

            if (!minutes) {
                alert('Please enter a target timeframe in minutes');
                return;
            }

            try {
                const response = await fetch(`${API_URL}/timeframes/calculate`, {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({ minutes, source_candles: sourceCandles })
                });

                const data = await response.json();

                const container = document.getElementById('customTimeframeResult');

                if (data.success) {
                    const calc = data.calculation;
                    const statusClass = calc.quality === 'EXCELLENT' ? 'excellent' :
                                       calc.quality === 'GOOD' ? 'good' :
                                       calc.quality === 'FAIR' ? 'fair' : 'poor';

                    container.innerHTML = `
                        <div class="metric-card">
                            <div class="metric-label">Result: ${calc.timeframe}</div>
                            <div class="metric-value">${calc.estimated_candles}</div>
                            <div class="metric-change neutral">candles available</div>
                            <div style="margin-top: 12px;">
                                <span class="status-badge ${statusClass}">
                                    ${calc.status}
                                </span>
                            </div>
                            ${calc.warning ? `
                                <div class="alert alert-warning" style="margin-top: 12px; font-size: 12px;">
                                    <span>‚ö†Ô∏è</span>
                                    <span>${calc.warning}</span>
                                </div>
                            ` : ''}
                        </div>
                    `;
                } else {
                    container.innerHTML = `
                        <div class="alert alert-error">
                            <span>‚ùå</span>
                            <span>${data.error}</span>
                        </div>
                    `;
                }
            } catch (error) {
                document.getElementById('customTimeframeResult').innerHTML = `
                    <div class="alert alert-error">
                        <span>‚ùå</span>
                        <span>Error: ${error.message}</span>
                    </div>
                `;
            }
        }

        async function getTimeframeRecommendations() {
            const symbol = document.getElementById('tfSymbolSelect').value;
            const strategy = document.getElementById('strategySelect').value;

            if (!symbol) {
                alert('Please select a symbol first');
                return;
            }

            const container = document.getElementById('recommendationsContainer');
            container.innerHTML = '<div class="spinner"></div>';

            try {
                const response = await fetch(`${API_URL}/timeframes/recommend?symbol=${encodeURIComponent(symbol)}&strategy=${strategy}`);
                const data = await response.json();

                if (data.success) {
                    container.innerHTML = `
                        <div class="alert alert-success">
                            <span>üí°</span>
                            <span><strong>Strategy: ${data.strategy.charAt(0).toUpperCase() + data.strategy.slice(1)}</strong></span>
                        </div>
                        <div class="metric-card">
                            <div class="metric-label">Recommended Timeframes</div>
                            <div class="metric-value" style="font-size: 20px;">
                                ${data.recommendations.join(', ')}
                            </div>
                            <div class="metric-change neutral" style="margin-top: 12px;">
                                Required: ${data.requirements.required_5m_candles} candles (5m) =
                                ${data.requirements.required_days} days of data
                            </div>
                        </div>
                    `;
                } else {
                    container.innerHTML = `
                        <div class="alert alert-error">
                            <span>‚ùå</span>
                            <span>${data.error}</span>
                        </div>
                    `;
                }
            } catch (error) {
                container.innerHTML = `
                    <div class="alert alert-error">
                        <span>‚ùå</span>
                        <span>Error: ${error.message}</span>
                    </div>
                `;
            }
        }

        // ========================================================================
        // TAB 3: DATA QUALITY
        // ========================================================================

        async function runQualityCheck() {
            const container = document.getElementById('qualityMatrixContainer');
            container.innerHTML = '<div class="spinner"></div>';

            try {
                const response = await fetch(`${API_URL}/quality/system`);
                const data = await response.json();

                if (data.success) {
                    displayQualityData(data.assessment);
                } else {
                    container.innerHTML = `
                        <div class="alert alert-error">
                            <span>‚ùå</span>
                            <span>${data.error}</span>
                        </div>
                    `;
                }
            } catch (error) {
                container.innerHTML = `
                    <div class="alert alert-error">
                        <span>‚ùå</span>
                        <span>Error: ${error.message}</span>
                    </div>
                `;
            }
        }

        function displayQualityData(assessment) {
            // Update metrics
            document.getElementById('overallQualityScore').textContent = `${assessment.average_score}/100`;
            document.getElementById('readyAssets').textContent = `${assessment.ready_count}/${assessment.total_assessments}`;
            document.getElementById('systemHealthStatus').textContent = assessment.system_ready ? '‚úÖ READY' : '‚ö†Ô∏è NOT READY';
            document.getElementById('qualityCheckTime').textContent = new Date().toLocaleTimeString();

            const statusClass = assessment.overall_status === 'HEALTHY' ? 'positive' :
                               assessment.overall_status === 'DEGRADED' ? 'neutral' : 'negative';
            document.getElementById('qualityStatus').className = `metric-change ${statusClass}`;
            document.getElementById('qualityStatus').textContent = assessment.overall_status;

            // Display matrix
            const container = document.getElementById('qualityMatrixContainer');

            let html = '<table class="data-table"><thead><tr><th>Symbol</th><th>Timeframe</th><th>Score</th><th>Status</th><th>Issues</th></tr></thead><tbody>';

            for (const [symbol, timeframes] of Object.entries(assessment.results)) {
                for (const [tf, result] of Object.entries(timeframes)) {
                    const statusClass = result.status === 'EXCELLENT' ? 'excellent' :
                                       result.status === 'GOOD' ? 'good' :
                                       result.status === 'FAIR' ? 'fair' : 'poor';

                    html += `
                        <tr>
                            <td><strong>${symbol}</strong></td>
                            <td>${tf}</td>
                            <td>${result.overall_score}/100</td>
                            <td>
                                <span class="status-badge ${statusClass}">
                                    ${result.status_emoji} ${result.status}
                                </span>
                            </td>
                            <td>${result.issues ? result.issues.join('; ') : 'None'}</td>
                        </tr>
                    `;
                }
            }

            html += '</tbody></table>';
            container.innerHTML = html;
        }

        async function assessSymbolQuality() {
            const symbol = document.getElementById('qualitySymbolSelect').value;
            if (!symbol) {
                alert('Please select a symbol');
                return;
            }

            const container = document.getElementById('detailedQualityContainer');
            container.innerHTML = '<div class="spinner"></div>';

            try {
                const response = await fetch(`${API_URL}/quality/assess`, {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({ symbol, timeframe: '5m' })
                });

                const data = await response.json();

                if (data.success) {
                    displayDetailedQuality(data.assessment);
                } else {
                    container.innerHTML = `
                        <div class="alert alert-error">
                            <span>‚ùå</span>
                            <span>${data.error}</span>
                        </div>
                    `;
                }
            } catch (error) {
                container.innerHTML = `
                    <div class="alert alert-error">
                        <span>‚ùå</span>
                        <span>Error: ${error.message}</span>
                    </div>
                `;
            }
        }

        function displayDetailedQuality(assessment) {
            const container = document.getElementById('detailedQualityContainer');

            const statusClass = assessment.status === 'EXCELLENT' ? 'excellent' :
                               assessment.status === 'GOOD' ? 'good' :
                               assessment.status === 'FAIR' ? 'fair' : 'poor';

            let html = `
                <div class="metric-card" style="margin-bottom: 20px;">
                    <div class="metric-label">${assessment.symbol} - ${assessment.timeframe}</div>
                    <div class="metric-value">${assessment.overall_score}/100</div>
                    <span class="status-badge ${statusClass}">
                        ${assessment.status_emoji} ${assessment.status}
                    </span>
                </div>

                <h3 style="margin-bottom: 16px;">Quality Breakdown</h3>
            `;

            for (const [metric, data] of Object.entries(assessment.breakdown)) {
                const metricClass = data.percentage >= 90 ? 'excellent' :
                                   data.percentage >= 70 ? 'good' :
                                   data.percentage >= 50 ? 'fair' : 'poor';

                html += `
                    <div class="metric-card" style="margin-bottom: 12px;">
                        <div style="display: flex; justify-content: space-between; align-items: center; margin-bottom: 8px;">
                            <div class="metric-label">${metric.replace(/_/g, ' ').toUpperCase()}</div>
                            <div><strong>${data.score}/${data.max}</strong></div>
                        </div>
                        <div class="progress-bar">
                            <div class="progress-fill ${metricClass}" style="width: ${data.percentage}%;"></div>
                        </div>
                        <div style="margin-top: 8px; font-size: 12px; color: #a1a1aa;">
                            ${data.status} ${data.details.status || ''}
                        </div>
                    </div>
                `;
            }

            if (assessment.issues.length > 0) {
                html += `
                    <div class="alert alert-warning" style="margin-top: 20px;">
                        <span>‚ö†Ô∏è</span>
                        <div>
                            <strong>Issues Found:</strong><br>
                            ${assessment.issues.map(issue => `‚Ä¢ ${issue}`).join('<br>')}
                        </div>
                    </div>
                `;
            }

            if (assessment.recommendations.length > 0) {
                html += `
                    <div class="alert alert-info" style="margin-top: 12px;">
                        <span>üí°</span>
                        <div>
                            <strong>Recommendations:</strong><br>
                            ${assessment.recommendations.map(rec => `‚Ä¢ ${rec}`).join('<br>')}
                        </div>
                    </div>
                `;
            }

            container.innerHTML = html;
        }

        // ========================================================================
        // TAB 4: LIVE SIGNALS
        // ========================================================================

        async function runSignalScan() {
            const useClaude = document.getElementById('useClaudeCheckbox').checked;
            const useCache = document.getElementById('useCacheCheckbox').checked;

            const container = document.getElementById('signalsContainer');
            container.innerHTML = `
                <div class="empty-state">
                    <div class="spinner"></div>
                    <div class="empty-title">Scanning markets...</div>
                    <div class="empty-text">This may take 30-60 seconds</div>
                </div>
            `;

            try {
                const response = await fetch(`${API_URL}/scan`, {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({
                        min_score: 75,
                        use_claude: useClaude,
                        use_cache: useCache
                    })
                });

                const data = await response.json();

                if (data.success) {
                    displaySignals(data.signals, data.scan_info);
                    document.getElementById('signalCount').textContent = data.scan_info.qualified_signals;
                } else {
                    container.innerHTML = `
                        <div class="alert alert-error">
                            <span>‚ùå</span>
                            <span>${data.error}</span>
                        </div>
                    `;
                }
            } catch (error) {
                container.innerHTML = `
                    <div class="alert alert-error">
                        <span>‚ùå</span>
                        <span>Error: ${error.message}</span>
                    </div>
                `;
            }
        }

        // Store signals globally for selection
        let currentSignals = [];
        let selectedSignalIndex = null;

        function displaySignals(signals, scanInfo) {
            const container = document.getElementById('signalsContainer');
            currentSignals = signals;

            if (signals.length === 0) {
                container.innerHTML = `
                    <div class="empty-state">
                        <div class="empty-icon">üì≠</div>
                        <div class="empty-title">No Qualified Signals</div>
                        <div class="empty-text">All assets scored below 75</div>
                    </div>
                `;
                return;
            }

            let html = `
                <div class="alert alert-success" style="margin-bottom: 20px;">
                    <span>‚úÖ</span>
                    <span>Found ${signals.length} qualified signal(s) in ${scanInfo.duration_seconds.toFixed(1)}s</span>
                </div>

                <div class="signals-two-column">
                    <!-- Left: Signal Cards -->
                    <div class="signals-list">
            `;

            signals.forEach((signal, i) => {
                const score = signal.enhanced_score || signal.score;
                const hasClaude = !!signal.claude_analysis;
                const direction = signal.direction === 'long' ? 'LONG üìà' : 'SHORT üìâ';
                const directionClass = signal.direction === 'long' ? 'long' : 'short';

                // Rank badges for top 3
                let rankBadge = '';
                if (i === 0) rankBadge = '<span class="signal-rank gold">ü•á #1</span>';
                else if (i === 1) rankBadge = '<span class="signal-rank silver">ü•à #2</span>';
                else if (i === 2) rankBadge = '<span class="signal-rank bronze">ü•â #3</span>';
                else rankBadge = `<span class="signal-rank">#${i + 1}</span>`;

                html += `
                    <div class="signal-item ${i === 0 ? 'selected' : ''}" onclick="selectSignal(${i})">
                        <div class="signal-item-header">
                            <div class="signal-item-symbol">${signal.symbol}</div>
                            ${rankBadge}
                        </div>
                        <div style="display: flex; justify-content: space-between; align-items: center;">
                            <div>
                                <div class="signal-item-score">${score}/194</div>
                                <span class="status-badge ${directionClass === 'long' ? 'excellent' : 'poor'}" style="font-size: 11px; margin-top: 4px;">
                                    ${direction}
                                </span>
                                ${hasClaude ? `
                                    <span class="status-badge good" style="font-size: 11px; margin-left: 4px;">
                                        üß† ${(signal.claude_analysis.confidence * 100).toFixed(0)}%
                                    </span>
                                ` : ''}
                            </div>
                            <div style="text-align: right;">
                                <div style="font-size: 10px; color: #a1a1aa;">Entry</div>
                                <div style="font-size: 14px; font-weight: 700; color: #f4f4f5;">$${signal.current_price.toFixed(4)}</div>
                            </div>
                        </div>
                    </div>
                `;
            });

            html += `
                    </div>

                    <!-- Right: Analysis Panel -->
                    <div class="analysis-panel" id="analysisPanel">
                        <div class="empty-state">
                            <div class="spinner"></div>
                            <div class="empty-title">Loading analysis...</div>
                        </div>
                    </div>
                </div>
            `;

            container.innerHTML = html;

            // Auto-select first signal
            if (signals.length > 0) {
                setTimeout(() => selectSignal(0), 100);
            }
        }

        async function selectSignal(index) {
            selectedSignalIndex = index;
            const signal = currentSignals[index];

            // Update selection state on signal cards
            document.querySelectorAll('.signal-item').forEach((item, i) => {
                if (i === index) {
                    item.classList.add('selected');
                } else {
                    item.classList.remove('selected');
                }
            });

            const panel = document.getElementById('analysisPanel');
            panel.innerHTML = '<div class="spinner"></div>';

            const score = signal.enhanced_score || signal.score;
            const hasClaude = !!signal.claude_analysis;
            const direction = signal.direction === 'long' ? 'LONG' : 'SHORT';
            const directionClass = signal.direction === 'long' ? 'long' : 'short';

            // Calculate R:R ratio
            const slDistance = Math.abs(signal.current_price - signal.stop_loss);
            const tpDistance = Math.abs(signal.take_profit - signal.current_price);
            const rrRatio = (tpDistance / slDistance).toFixed(2);

            let html = `
                <!-- Signal Header -->
                <div style="margin-bottom: 24px;">
                    <h2 style="font-size: 24px; color: #f4f4f5; margin-bottom: 8px;">${signal.symbol}</h2>
                    <div style="display: flex; align-items: center; gap: 12px;">
                        <span class="status-badge ${directionClass === 'long' ? 'excellent' : 'poor'}" style="font-size: 14px;">
                            ${direction} ${direction === 'LONG' ? 'üìà' : 'üìâ'}
                        </span>
                        <div style="font-size: 20px; font-weight: 700; color: #667eea;">${score}/194</div>
                        ${hasClaude ? `
                            <span class="status-badge good">
                                üß† Claude ${(signal.claude_analysis.confidence * 100).toFixed(0)}%
                            </span>
                        ` : ''}
                    </div>
                </div>

                <!-- TradingView-style Chart -->
                <div class="analysis-section">
                    <h3>üìà Price Chart</h3>
                    <div id="signalChart" class="chart-container"></div>
                </div>

                <!-- Score Breakdown -->
                <div class="analysis-section">
                    <h3>üìä Score Breakdown</h3>
            `;

            // Display indicator scores
            if (signal.indicator_scores) {
                const indicators = signal.indicator_scores;
                for (const [indicator, score_data] of Object.entries(indicators)) {
                    const scoreValue = typeof score_data === 'object' ? score_data.score : score_data;
                    const maxScore = typeof score_data === 'object' ? score_data.max : 50; // default max
                    const percentage = (scoreValue / maxScore) * 100;
                    const barClass = percentage >= 80 ? 'excellent' :
                                    percentage >= 60 ? 'good' :
                                    percentage >= 40 ? 'fair' : 'poor';

                    html += `
                        <div class="breakdown-item">
                            <div class="breakdown-header">
                                <span class="breakdown-name">${indicator.replace(/_/g, ' ')}</span>
                                <span class="breakdown-value">${scoreValue}/${maxScore}</span>
                            </div>
                            <div class="progress-bar">
                                <div class="progress-fill ${barClass}" style="width: ${percentage}%;"></div>
                            </div>
                        </div>
                    `;
                }
            }

            html += `
                </div>

                <!-- Trade Parameters -->
                <div class="analysis-section">
                    <h3>üí∞ Trade Parameters</h3>
                    <div class="trade-params-grid">
                        <div class="param-box">
                            <div class="param-label">Entry Price</div>
                            <div class="param-value">$${signal.current_price.toFixed(4)}</div>
                        </div>
                        <div class="param-box">
                            <div class="param-label">Direction</div>
                            <div class="param-value ${directionClass}">${direction}</div>
                        </div>
                        <div class="param-box">
                            <div class="param-label">Stop Loss</div>
                            <div class="param-value" style="color: #ef4444;">$${signal.stop_loss.toFixed(4)}</div>
                        </div>
                        <div class="param-box">
                            <div class="param-label">Take Profit</div>
                            <div class="param-value" style="color: #10b981;">$${signal.take_profit.toFixed(4)}</div>
                        </div>
                        <div class="param-box">
                            <div class="param-label">Leverage</div>
                            <div class="param-value">${signal.leverage}x</div>
                        </div>
                        <div class="param-box">
                            <div class="param-label">R:R Ratio</div>
                            <div class="param-value">1:${rrRatio}</div>
                        </div>
                    </div>
                </div>

                <!-- Risk Assessment -->
                <div class="analysis-section">
                    <h3>‚ö†Ô∏è Risk Assessment</h3>
                    <div class="metric-card">
                        <div class="grid grid-3">
                            <div>
                                <div class="metric-label">Score</div>
                                <div class="metric-value" style="font-size: 20px;">${score}/194</div>
                            </div>
                            <div>
                                <div class="metric-label">Risk Level</div>
                                <div class="metric-value" style="font-size: 18px;">
                                    ${score >= 150 ? 'üü¢ Low' : score >= 100 ? 'üü° Medium' : 'üü† High'}
                                </div>
                            </div>
                            <div>
                                <div class="metric-label">Max Loss</div>
                                <div class="metric-value" style="font-size: 18px; color: #ef4444;">
                                    ${((slDistance / signal.current_price) * 100).toFixed(2)}%
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            `;

            // Claude AI Analysis
            if (hasClaude && signal.claude_analysis.justification) {
                html += `
                    <div class="analysis-section">
                        <h3>üß† Claude AI Analysis</h3>
                        <div class="alert alert-info">
                            <span>üí°</span>
                            <div>
                                <strong>Confidence: ${(signal.claude_analysis.confidence * 100).toFixed(0)}%</strong><br>
                                ${signal.claude_analysis.justification}
                            </div>
                        </div>
                    </div>
                `;
            }

            panel.innerHTML = html;

            // Render TradingView-style candlestick chart
            renderSignalChart(signal);
        }

        async function renderSignalChart(signal) {
            try {
                // Fetch OHLCV data for the signal symbol
                const response = await fetch(`${API_URL}/twelvedata/ohlcv?symbol=${encodeURIComponent(signal.symbol)}&limit=100`);

                if (!response.ok) {
                    // If API endpoint doesn't exist, show placeholder
                    document.getElementById('signalChart').innerHTML = `
                        <div class="empty-state">
                            <div class="empty-icon">üìä</div>
                            <div class="empty-title">Chart Data Unavailable</div>
                            <div class="empty-text">OHLCV endpoint not implemented yet</div>
                        </div>
                    `;
                    return;
                }

                const data = await response.json();

                if (!data.success || !data.ohlcv || data.ohlcv.length === 0) {
                    document.getElementById('signalChart').innerHTML = `
                        <div class="empty-state">
                            <div class="empty-icon">üìä</div>
                            <div class="empty-title">No Chart Data</div>
                            <div class="empty-text">Unable to load price data</div>
                        </div>
                    `;
                    return;
                }

                const ohlcv = data.ohlcv;

                // Prepare candlestick data
                const candlestick = {
                    x: ohlcv.map(d => d.datetime),
                    open: ohlcv.map(d => d.open),
                    high: ohlcv.map(d => d.high),
                    low: ohlcv.map(d => d.low),
                    close: ohlcv.map(d => d.close),
                    type: 'candlestick',
                    name: signal.symbol,
                    increasing: { line: { color: '#10b981' } },
                    decreasing: { line: { color: '#ef4444' } }
                };

                // Add Entry/SL/TP lines
                const entryLine = {
                    x: ohlcv.map(d => d.datetime),
                    y: Array(ohlcv.length).fill(signal.current_price),
                    mode: 'lines',
                    name: 'Entry',
                    line: { color: '#667eea', width: 2, dash: 'dot' }
                };

                const slLine = {
                    x: ohlcv.map(d => d.datetime),
                    y: Array(ohlcv.length).fill(signal.stop_loss),
                    mode: 'lines',
                    name: 'Stop Loss',
                    line: { color: '#ef4444', width: 2, dash: 'dash' }
                };

                const tpLine = {
                    x: ohlcv.map(d => d.datetime),
                    y: Array(ohlcv.length).fill(signal.take_profit),
                    mode: 'lines',
                    name: 'Take Profit',
                    line: { color: '#10b981', width: 2, dash: 'dash' }
                };

                const layout = {
                    paper_bgcolor: '#27273a',
                    plot_bgcolor: '#1e1e2e',
                    font: { color: '#e4e4e7' },
                    xaxis: {
                        gridcolor: '#3a3a4e',
                        showgrid: true
                    },
                    yaxis: {
                        gridcolor: '#3a3a4e',
                        showgrid: true,
                        title: 'Price'
                    },
                    margin: { l: 60, r: 40, t: 20, b: 40 },
                    showlegend: true,
                    legend: {
                        x: 0,
                        y: 1,
                        bgcolor: 'rgba(30, 30, 46, 0.8)'
                    },
                    height: 500,
                    autosize: true
                };

                const config = {
                    responsive: true,
                    displayModeBar: true,
                    displaylogo: false
                };

                Plotly.newPlot('signalChart', [candlestick, entryLine, slLine, tpLine], layout, config);

            } catch (error) {
                console.error('Error rendering chart:', error);
                document.getElementById('signalChart').innerHTML = `
                    <div class="alert alert-error">
                        <span>‚ùå</span>
                        <span>Error loading chart: ${error.message}</span>
                    </div>
                `;
            }
        }

        // ========================================================================
        // TAB 5: CLAUDE AI
        // ========================================================================

        async function loadClaudeData() {
            try {
                // Load Claude queue status
                const statusResponse = await fetch(`${API_URL}/claude/queue/status`);
                const statusData = await statusResponse.json();

                if (statusData.success) {
                    const status = statusData.status;
                    document.getElementById('claudeValidations').textContent = status.validations_today;
                    document.getElementById('claudeMaxValidations').value = status.max_validations;

                    // Update limit text
                    document.querySelector('#claudeValidations').nextElementSibling.textContent =
                        `/ ${status.max_validations} limit`;
                }

                // Load Claude performance
                const perfResponse = await fetch(`${API_URL}/claude/performance`);
                const perfData = await perfResponse.json();

                if (perfData.success && perfData.performance.total_validations > 0) {
                    const perf = perfData.performance;

                    // Display average confidence
                    const avgConf = (perf.avg_confidence * 100).toFixed(0);
                    document.getElementById('claudeConfidence').textContent = `${avgConf}%`;

                    // Display win rate impact (enhancement)
                    const impact = perf.avg_enhancement > 0 ? `+${perf.avg_enhancement.toFixed(1)}` : perf.avg_enhancement.toFixed(1);
                    document.getElementById('claudeImpact').textContent = impact;
                }

                // Load current settings
                const settingsResponse = await fetch(`${API_URL}/claude/settings`);
                const settingsData = await settingsResponse.json();

                if (settingsData.success) {
                    document.getElementById('claudeMinScore').value = settingsData.settings.min_score_for_validation;
                    document.getElementById('claudeMaxValidations').value = settingsData.settings.max_validations_per_day;
                }

            } catch (error) {
                console.error('Error loading Claude data:', error);
            }
        }

        async function saveClaudeSettings() {
            const minScore = parseInt(document.getElementById('claudeMinScore').value);
            const maxValidations = parseInt(document.getElementById('claudeMaxValidations').value);

            // Validation
            if (minScore < 50 || minScore > 194) {
                alert('‚ö†Ô∏è Minimum score must be between 50 and 194');
                return;
            }

            if (maxValidations < 1 || maxValidations > 100) {
                alert('‚ö†Ô∏è Max validations must be between 1 and 100');
                return;
            }

            try {
                const response = await fetch(`${API_URL}/claude/settings`, {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({
                        min_score_for_validation: minScore,
                        max_validations_per_day: maxValidations
                    })
                });

                const data = await response.json();

                if (data.success) {
                    alert('‚úÖ Settings saved successfully!');
                    await loadClaudeData(); // Reload to show updated settings
                } else {
                    alert(`‚ùå Error: ${data.error}`);
                }
            } catch (error) {
                alert(`‚ùå Error: ${error.message}`);
            }
        }

        // ========================================================================
        // TAB 6: SIGNAL HISTORY
        // ========================================================================

        async function loadHistoryData() {
            try {
                // Load performance statistics
                const perfResponse = await fetch(`${API_URL}/history/performance?days=30`);
                const perfData = await perfResponse.json();

                if (perfData.success && perfData.performance) {
                    const perf = perfData.performance;

                    // Update metrics
                    document.getElementById('historyTotalSignals').textContent = perf.total_signals;
                    document.getElementById('historyWinRate').textContent = `${perf.win_rate}%`;
                    document.getElementById('historyAvgPnL').textContent = `${perf.avg_pnl_percentage >= 0 ? '+' : ''}${perf.avg_pnl_percentage}%`;

                    // Claude impact
                    if (perf.ab_testing && perf.ab_testing.improvement !== undefined) {
                        const impact = perf.ab_testing.improvement;
                        document.getElementById('historyClaudeImpact').textContent = `${impact >= 0 ? '+' : ''}${impact}%`;
                    }

                    // Display A/B testing results
                    displayABTesting(perf.ab_testing);
                }

                // Load recent signals
                const signalsResponse = await fetch(`${API_URL}/history/signals?limit=20&days=30`);
                const signalsData = await signalsResponse.json();

                if (signalsData.success) {
                    displayHistorySignals(signalsData.signals);
                }

            } catch (error) {
                console.error('Error loading history data:', error);
            }
        }

        function displayHistorySignals(signals) {
            const container = document.getElementById('historySignalsContainer');

            if (!signals || signals.length === 0) {
                container.innerHTML = `
                    <div class="empty-state">
                        <div class="empty-icon">üìú</div>
                        <div class="empty-title">No signals recorded yet</div>
                        <div class="empty-text">Run signal scans to build history</div>
                    </div>
                `;
                return;
            }

            let html = '<table class="data-table"><thead><tr><th>Date</th><th>Symbol</th><th>Direction</th><th>Score</th><th>Status</th><th>PnL</th></tr></thead><tbody>';

            signals.forEach(signal => {
                const date = new Date(signal.timestamp).toLocaleDateString();
                const directionClass = signal.direction === 'long' ? 'excellent' : 'poor';
                const outcomeClass = signal.outcome === 'win' ? 'excellent' :
                                     signal.outcome === 'loss' ? 'poor' : 'fair';

                const pnl = signal.pnl_percentage !== null ? `${signal.pnl_percentage >= 0 ? '+' : ''}${signal.pnl_percentage.toFixed(2)}%` : '--';
                const status = signal.status ? signal.status.replace('closed_', '').replace('_', ' ').toUpperCase() : 'PENDING';

                html += `
                    <tr>
                        <td>${date}</td>
                        <td><strong>${signal.symbol}</strong></td>
                        <td>
                            <span class="status-badge ${directionClass}">
                                ${signal.direction.toUpperCase()}
                            </span>
                        </td>
                        <td>${signal.enhanced_score || signal.score}</td>
                        <td>
                            <span class="status-badge ${outcomeClass}">
                                ${status}
                            </span>
                        </td>
                        <td style="color: ${signal.pnl_percentage >= 0 ? '#10b981' : '#ef4444'};">
                            <strong>${pnl}</strong>
                        </td>
                    </tr>
                `;
            });

            html += '</tbody></table>';
            container.innerHTML = html;
        }

        function displayABTesting(abTesting) {
            const container = document.getElementById('historyABTestingContainer');

            if (!abTesting || (abTesting.screener_only.wins === 0 && abTesting.claude_validated.wins === 0)) {
                container.innerHTML = `
                    <div class="empty-state">
                        <div class="empty-icon">üî¨</div>
                        <div class="empty-title">Insufficient data for A/B testing</div>
                        <div class="empty-text">Need both Claude and screener-only signals to compare</div>
                    </div>
                `;
                return;
            }

            const screener = abTesting.screener_only;
            const claude = abTesting.claude_validated;
            const improvement = abTesting.improvement;

            const html = `
                <div class="grid grid-2">
                    <div class="metric-card">
                        <h3 style="margin-bottom: 16px;">Screener Only</h3>
                        <div class="grid grid-2" style="gap: 12px;">
                            <div>
                                <div class="metric-label">Win Rate</div>
                                <div class="metric-value" style="font-size: 24px;">${screener.win_rate}%</div>
                            </div>
                            <div>
                                <div class="metric-label">Signals</div>
                                <div class="metric-value" style="font-size: 24px;">${screener.wins + screener.losses}</div>
                            </div>
                        </div>
                        <div class="progress-bar" style="margin-top: 12px;">
                            <div class="progress-fill good" style="width: ${screener.win_rate}%;"></div>
                        </div>
                    </div>

                    <div class="metric-card">
                        <h3 style="margin-bottom: 16px;">Claude Validated</h3>
                        <div class="grid grid-2" style="gap: 12px;">
                            <div>
                                <div class="metric-label">Win Rate</div>
                                <div class="metric-value" style="font-size: 24px;">${claude.win_rate}%</div>
                            </div>
                            <div>
                                <div class="metric-label">Signals</div>
                                <div class="metric-value" style="font-size: 24px;">${claude.wins + claude.losses}</div>
                            </div>
                        </div>
                        <div class="progress-bar" style="margin-top: 12px;">
                            <div class="progress-fill excellent" style="width: ${claude.win_rate}%;"></div>
                        </div>
                    </div>
                </div>

                <div class="alert ${improvement >= 0 ? 'alert-success' : 'alert-warning'}" style="margin-top: 20px;">
                    <span>${improvement >= 0 ? '‚úÖ' : '‚ö†Ô∏è'}</span>
                    <div>
                        <strong>Impact:</strong> Claude validation ${improvement >= 0 ? 'improved' : 'decreased'} win rate by
                        <strong>${improvement >= 0 ? '+' : ''}${improvement}%</strong>
                        ${improvement >= 10 ? ' (significant improvement!)' : improvement < 0 ? ' (needs review)' : ''}
                    </div>
                </div>
            `;

            container.innerHTML = html;
        }

        async function loadHistoryTimeline() {
            try {
                const response = await fetch(`${API_URL}/history/timeline?days=30&group_by=day`);
                const data = await response.json();

                if (data.success && data.timeline) {
                    // TODO: Add Plotly chart for timeline visualization
                    console.log('Timeline data:', data.timeline);
                    alert('Timeline visualization coming soon!');
                }
            } catch (error) {
                console.error('Error loading timeline:', error);
            }
        }

        // ========================================================================
        // TAB 7: MACRO ANALYSIS
        // ========================================================================

        async function loadMacroData() {
            const timeRange = document.getElementById('macroTimeRange').value;
            const container = document.getElementById('macroChart');

            container.innerHTML = `
                <div class="empty-state">
                    <div class="spinner"></div>
                    <div class="empty-title">Lade Makro-Daten...</div>
                </div>
            `;

            try {
                // Try to fetch real data from API (optional endpoint)
                // For now, use mock data to demonstrate the visualization
                const mockData = generateMockMacroData(timeRange);

                // Update metric cards
                updateMacroMetrics(mockData);

                // Render chart
                renderMacroChart(mockData);

                // Update correlation metrics
                updateCorrelationMetrics(mockData);

            } catch (error) {
                console.error('Error loading macro data:', error);
                container.innerHTML = `
                    <div class="alert alert-error">
                        <span>‚ùå</span>
                        <span>Error loading macro data: ${error.message}</span>
                    </div>
                `;
            }
        }

        function generateMockMacroData(timeRange) {
            // Generate mock data based on time range
            const periods = timeRange === '1y' ? 12 : timeRange === '3y' ? 36 : timeRange === '5y' ? 60 : 120;
            const startDate = new Date();
            startDate.setMonth(startDate.getMonth() - periods);

            const dates = [];
            const m2_supply = [];  // M2 Money Supply (Liquidity)
            const fed_balance = [];  // Fed Balance Sheet
            const gdp_growth = [];  // GDP Growth Rate
            const pmi = [];  // PMI Index

            // Generate mock time series data
            for (let i = 0; i < periods; i++) {
                const date = new Date(startDate);
                date.setMonth(date.getMonth() + i);
                dates.push(date.toISOString().split('T')[0]);

                // Mock M2 supply (trending up with some volatility)
                m2_supply.push(20000 + i * 150 + Math.random() * 500);

                // Mock Fed balance sheet (volatile, trending up then down)
                fed_balance.push(8000 + Math.sin(i / 10) * 1000 + Math.random() * 200);

                // Mock GDP growth (cyclical, 0-4%)
                gdp_growth.push(2.0 + Math.sin(i / 8) * 1.5 + Math.random() * 0.5);

                // Mock PMI (50-60 range, above 50 = expansion)
                pmi.push(52 + Math.sin(i / 6) * 5 + Math.random() * 2);
            }

            return {
                dates,
                liquidity: {
                    m2_supply,
                    fed_balance,
                    current_m2: m2_supply[m2_supply.length - 1],
                    current_fed: fed_balance[fed_balance.length - 1],
                    m2_change: ((m2_supply[m2_supply.length - 1] - m2_supply[m2_supply.length - 2]) / m2_supply[m2_supply.length - 2] * 100).toFixed(2),
                    fed_change: ((fed_balance[fed_balance.length - 1] - fed_balance[fed_balance.length - 2]) / fed_balance[fed_balance.length - 2] * 100).toFixed(2)
                },
                growth: {
                    gdp_growth,
                    pmi,
                    current_gdp: gdp_growth[gdp_growth.length - 1],
                    current_pmi: pmi[pmi.length - 1],
                    gdp_change: (gdp_growth[gdp_growth.length - 1] - gdp_growth[gdp_growth.length - 2]).toFixed(2),
                    pmi_change: (pmi[pmi.length - 1] - pmi[pmi.length - 2]).toFixed(1)
                }
            };
        }

        function updateMacroMetrics(data) {
            // Update M2 Supply
            document.getElementById('macroLiquidityM2').textContent = `$${(data.liquidity.current_m2 / 1000).toFixed(1)}T`;
            const m2ChangeElem = document.getElementById('macroLiquidityM2Change');
            m2ChangeElem.textContent = `${data.liquidity.m2_change >= 0 ? '+' : ''}${data.liquidity.m2_change}% MoM`;
            m2ChangeElem.className = `metric-change ${data.liquidity.m2_change >= 0 ? 'positive' : 'negative'}`;

            // Update Fed Balance
            document.getElementById('macroFedBalance').textContent = `$${(data.liquidity.current_fed / 1000).toFixed(1)}T`;
            const fedChangeElem = document.getElementById('macroFedBalanceChange');
            fedChangeElem.textContent = `${data.liquidity.fed_change >= 0 ? '+' : ''}${data.liquidity.fed_change}% MoM`;
            fedChangeElem.className = `metric-change ${data.liquidity.fed_change >= 0 ? 'positive' : 'negative'}`;

            // Update GDP Growth
            document.getElementById('macroGDPGrowth').textContent = `${data.growth.current_gdp.toFixed(1)}%`;
            const gdpChangeElem = document.getElementById('macroGDPGrowthChange');
            gdpChangeElem.textContent = `${data.growth.gdp_change >= 0 ? '+' : ''}${data.growth.gdp_change}% QoQ`;
            gdpChangeElem.className = `metric-change ${data.growth.gdp_change >= 0 ? 'positive' : 'negative'}`;

            // Update PMI
            document.getElementById('macroPMI').textContent = data.growth.current_pmi.toFixed(1);
            const pmiChangeElem = document.getElementById('macroPMIChange');
            pmiChangeElem.textContent = `${data.growth.pmi_change >= 0 ? '+' : ''}${data.growth.pmi_change} MoM`;
            pmiChangeElem.className = `metric-change ${data.growth.pmi_change >= 0 ? 'positive' : 'negative'}`;
        }

        function renderMacroChart(data) {
            const container = document.getElementById('macroChart');

            try {
                // Create dual-axis chart: Liquidity on left, Growth on right

                // Trace 1: M2 Money Supply (Liquidity)
                const m2Trace = {
                    x: data.dates,
                    y: data.liquidity.m2_supply,
                    name: 'M2 Geldmenge',
                    type: 'scatter',
                    mode: 'lines',
                    line: { color: '#667eea', width: 3 },
                    yaxis: 'y1'
                };

                // Trace 2: Fed Balance Sheet (Liquidity)
                const fedTrace = {
                    x: data.dates,
                    y: data.liquidity.fed_balance,
                    name: 'Fed Bilanz',
                    type: 'scatter',
                    mode: 'lines',
                    line: { color: '#764ba2', width: 2, dash: 'dash' },
                    yaxis: 'y1'
                };

                // Trace 3: GDP Growth (right axis)
                const gdpTrace = {
                    x: data.dates,
                    y: data.growth.gdp_growth,
                    name: 'BIP-Wachstum (%)',
                    type: 'scatter',
                    mode: 'lines',
                    line: { color: '#10b981', width: 3 },
                    yaxis: 'y2'
                };

                // Trace 4: PMI Index (right axis)
                const pmiTrace = {
                    x: data.dates,
                    y: data.growth.pmi,
                    name: 'PMI Index',
                    type: 'scatter',
                    mode: 'lines',
                    line: { color: '#f59e0b', width: 2, dash: 'dot' },
                    yaxis: 'y2'
                };

                // Layout with dual Y-axes
                const layout = {
                    paper_bgcolor: '#27273a',
                    plot_bgcolor: '#1e1e2e',
                    font: { color: '#e4e4e7', size: 12 },
                    xaxis: {
                        gridcolor: '#3a3a4e',
                        showgrid: true,
                        title: 'Datum'
                    },
                    yaxis: {
                        title: 'Liquidit√§t (Mrd. $)',
                        titlefont: { color: '#667eea' },
                        tickfont: { color: '#667eea' },
                        gridcolor: '#3a3a4e',
                        showgrid: true
                    },
                    yaxis2: {
                        title: 'Wachstum (% / Index)',
                        titlefont: { color: '#10b981' },
                        tickfont: { color: '#10b981' },
                        overlaying: 'y',
                        side: 'right',
                        showgrid: false
                    },
                    margin: { l: 80, r: 80, t: 40, b: 60 },
                    showlegend: true,
                    legend: {
                        x: 0,
                        y: 1.1,
                        orientation: 'h',
                        bgcolor: 'rgba(30, 30, 46, 0.8)',
                        bordercolor: '#3a3a4e',
                        borderwidth: 1
                    },
                    height: 500,
                    autosize: true,
                    hovermode: 'x unified'
                };

                const config = {
                    responsive: true,
                    displayModeBar: true,
                    displaylogo: false,
                    modeBarButtonsToRemove: ['lasso2d', 'select2d']
                };

                Plotly.newPlot('macroChart', [m2Trace, fedTrace, gdpTrace, pmiTrace], layout, config);

            } catch (error) {
                console.error('Error rendering macro chart:', error);
                container.innerHTML = `
                    <div class="alert alert-error">
                        <span>‚ùå</span>
                        <span>Error rendering chart: ${error.message}</span>
                    </div>
                `;
            }
        }

        function updateCorrelationMetrics(data) {
            // Calculate simple correlations (mock for now)
            // In production, these would be calculated from real historical data

            // Mock correlation: Liquidity ‚Üí Stock Market (typically positive)
            const liquidityCorr = 0.72;
            document.getElementById('correlationLiquidityStock').textContent = liquidityCorr.toFixed(2);

            // Mock correlation: GDP ‚Üí Stock Market (positive but weaker)
            const gdpCorr = 0.58;
            document.getElementById('correlationGDPStock').textContent = gdpCorr.toFixed(2);

            // Market signal based on trends
            const m2Rising = parseFloat(data.liquidity.m2_change) > 0;
            const gdpPositive = data.growth.current_gdp > 2.0;
            const pmiExpanding = data.growth.current_pmi > 50;

            let signal = 'üü¢ BULLISH';
            if (m2Rising && gdpPositive && pmiExpanding) {
                signal = 'üü¢ STRONG BULLISH';
            } else if (!m2Rising && !gdpPositive) {
                signal = 'üî¥ BEARISH';
            } else if (m2Rising || gdpPositive) {
                signal = 'üü° NEUTRAL';
            }

            document.getElementById('macroMarketSignal').textContent = signal;
        }

        // Initialize on page load
        window.addEventListener('DOMContentLoaded', init);
    </script>
</body>
</html>
