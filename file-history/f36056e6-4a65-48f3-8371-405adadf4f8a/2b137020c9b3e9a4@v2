# Capital.com API Credentials
CAPITAL_API_KEY=your_api_key_here
CAPITAL_API_SECRET=your_api_secret_here
CAPITAL_PASSWORD=your_password_here

# Trading Mode
DEMO_MODE=true  # Set to 'false' for live trading

# Data Provider Configuration
TRADINGVIEW_ENABLED=false  # Set to 'true' to enable TradingView as primary data source
TWELVEDATA_API_KEY=your_twelvedata_api_key_here  # Get FREE key at https://twelvedata.com/
MASSIVE_API_KEY=your_massive_api_key_here  # Get key at https://massive.com/ (formerly Polygon.io)

# Data Validation
STRICT_DATA_VALIDATION=false  # Set to 'true' for production (rejects synthetic data)

# Email Notifications (Optional)
EMAIL_ENABLED=false
EMAIL_USER=
EMAIL_PASSWORD=
EMAIL_TO=
