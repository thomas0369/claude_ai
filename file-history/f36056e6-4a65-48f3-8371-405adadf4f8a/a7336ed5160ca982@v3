    <script>
        const API_URL = 'http://localhost:5000/api';
        let currentTab = 'pipeline';
        let autoRefreshInterval = null;

        // Tab Switching
        function switchTab(tabName) {
            // Hide all tabs
            document.querySelectorAll('.tab-content').forEach(tab => {
                tab.classList.remove('active');
            });

            // Deactivate all buttons
            document.querySelectorAll('.tab-button').forEach(btn => {
                btn.classList.remove('active');
            });

            // Show selected tab
            document.getElementById(`tab-${tabName}`).classList.add('active');
            event.target.classList.add('active');

            currentTab = tabName;

            // Load tab data
            loadTabData(tabName);
        }

        // Load data for specific tab
        function loadTabData(tabName) {
            switch(tabName) {
                case 'pipeline':
                    loadPipelineData();
                    break;
                case 'timeframes':
                    // Timeframe tab is interactive, no auto-load needed
                    break;
                case 'quality':
                    runQualityCheck();
                    break;
                case 'signals':
                    // Signals tab is on-demand
                    break;
                case 'claude':
                    loadClaudeData();
                    break;
            }
        }

        // Initialize dashboard
        async function init() {
            console.log('Initializing dashboard...');

            // Load initial data
            await loadSystemStatus();
            await loadPipelineData();

            // Setup auto-refresh (every 60 seconds)
            autoRefreshInterval = setInterval(async () => {
                await loadSystemStatus();
                if (currentTab === 'pipeline') {
                    await loadPipelineData();
                } else if (currentTab === 'quality') {
                    await runQualityCheck();
                }
            }, 60000);

            console.log('Dashboard initialized');
        }

        // Load system status
        async function loadSystemStatus() {
            try {
                const response = await fetch(`${API_URL}/twelvedata/status`);
                const data = await response.json();

                if (data.success) {
                    document.getElementById('apiCalls').textContent = `${data.calls_today}/800`;
                    document.getElementById('cacheQuality').textContent = `${data.cache_stats.total_symbols} symbols`;
                    document.getElementById('lastUpdate').textContent = new Date().toLocaleTimeString();
                }
            } catch (error) {
                console.error('Error loading system status:', error);
            }
        }

        // ========================================================================
        // TAB 1: DATA PIPELINE
        // ========================================================================

        async function loadPipelineData() {
            try {
                // Load TwelveData status
                const statusResponse = await fetch(`${API_URL}/twelvedata/status`);
                const statusData = await statusResponse.json();

                if (statusData.success) {
                    document.getElementById('apiStatus').textContent = statusData.api_status;
                    document.getElementById('callsToday').textContent = statusData.calls_today;
                    document.getElementById('rateLimitHealth').textContent = `${statusData.rate_limit_health}%`;

                    const cacheSizeMB = statusData.cache_stats.total_size_mb.toFixed(2);
                    document.getElementById('cacheSize').textContent = `${cacheSizeMB} MB`;
                    document.getElementById('symbolsCached').textContent = `${statusData.cache_stats.total_symbols} symbols`;

                    // Update progress bar
                    const progress = document.getElementById('rateLimitProgress');
                    progress.style.width = `${statusData.rate_limit_health}%`;

                    if (statusData.rate_limit_health >= 80) {
                        progress.className = 'progress-fill excellent';
                    } else if (statusData.rate_limit_health >= 60) {
                        progress.className = 'progress-fill good';
                    } else if (statusData.rate_limit_health >= 40) {
                        progress.className = 'progress-fill fair';
                    } else {
                        progress.className = 'progress-fill poor';
                    }
                }

                // Load symbol status
                const symbolsResponse = await fetch(`${API_URL}/twelvedata/symbols`);
                const symbolsData = await symbolsResponse.json();

                if (symbolsData.success) {
                    displaySymbolTable(symbolsData.symbols);
                }

            } catch (error) {
                console.error('Error loading pipeline data:', error);
                document.getElementById('symbolTableContainer').innerHTML = `
                    <div class="alert alert-error">
                        <span>‚ùå</span>
                        <span>Error loading pipeline data: ${error.message}</span>
                    </div>
                `;
            }
        }

        function displaySymbolTable(symbols) {
            const container = document.getElementById('symbolTableContainer');

            let html = `
                <table class="data-table">
                    <thead>
                        <tr>
                            <th>Symbol</th>
                            <th>Status</th>
                            <th>Last Fetch</th>
                            <th>Candles</th>
                            <th>Freshness</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
            `;

            symbols.forEach(symbol => {
                const ageText = symbol.last_fetch_minutes !== null
                    ? `${symbol.last_fetch_minutes} min ago`
                    : 'Never';

                const statusClass = symbol.status === 'LIVE' ? 'excellent' :
                                   symbol.status === 'STALE' ? 'fair' : 'poor';

                html += `
                    <tr>
                        <td><strong>${symbol.symbol}</strong></td>
                        <td>
                            <span class="status-badge ${statusClass}">
                                ${symbol.status_emoji} ${symbol.status}
                            </span>
                        </td>
                        <td>${ageText}</td>
                        <td>${symbol.candles}</td>
                        <td>
                            <div class="progress-bar">
                                <div class="progress-fill ${statusClass}" style="width: ${symbol.freshness}%;"></div>
                            </div>
                            ${symbol.freshness}%
                        </td>
                        <td>
                            <button class="btn btn-secondary" style="padding: 6px 12px; font-size: 12px;"
                                    onclick="refreshSymbol('${symbol.symbol}')">
                                üîÑ Refresh
                            </button>
                        </td>
                    </tr>
                `;
            });

            html += `
                    </tbody>
                </table>
            `;

            container.innerHTML = html;
        }

        async function refreshSymbol(symbol) {
            try {
                const response = await fetch(`${API_URL}/twelvedata/refresh`, {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({ symbols: [symbol] })
                });

                const data = await response.json();

                if (data.success) {
                    alert(`‚úÖ ${symbol} refreshed successfully!`);
                    await loadPipelineData();
                } else {
                    alert(`‚ùå Error refreshing ${symbol}: ${data.error}`);
                }
            } catch (error) {
                alert(`‚ùå Error: ${error.message}`);
            }
        }

        async function refreshAllData() {
            if (!confirm('Refresh all symbols? This will use API calls.')) return;

            try {
                const response = await fetch(`${API_URL}/twelvedata/refresh`, {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({})
                });

                const data = await response.json();

                if (data.success) {
                    alert('‚úÖ All symbols refreshed successfully!');
                    await loadPipelineData();
                } else {
                    alert(`‚ùå Error: ${data.error}`);
                }
            } catch (error) {
                alert(`‚ùå Error: ${error.message}`);
            }
        }

        // ========================================================================
        // TAB 2: TIMEFRAME ENGINE
        // ========================================================================

        async function loadAvailableTimeframes() {
            const symbol = document.getElementById('tfSymbolSelect').value;
            if (!symbol) return;

            const container = document.getElementById('availableTimeframesContainer');
            container.innerHTML = '<div class="spinner"></div>';

            try {
                const response = await fetch(`${API_URL}/timeframes/available?symbol=${encodeURIComponent(symbol)}`);
                const data = await response.json();

                if (data.success) {
                    displayAvailableTimeframes(data.available_timeframes, data.source_candles);
                    document.getElementById('sourceCandles').value = data.source_candles;
                } else {
                    container.innerHTML = `
                        <div class="alert alert-error">
                            <span>‚ùå</span>
                            <span>${data.error}</span>
                        </div>
                    `;
                }
            } catch (error) {
                container.innerHTML = `
                    <div class="alert alert-error">
                        <span>‚ùå</span>
                        <span>Error: ${error.message}</span>
                    </div>
                `;
            }
        }

        function displayAvailableTimeframes(timeframes, sourceCandles) {
            const container = document.getElementById('availableTimeframesContainer');

            let html = `
                <div class="alert alert-success" style="margin-bottom: 16px;">
                    <span>üìä</span>
                    <span>Source: ${sourceCandles} candles (5m)</span>
                </div>
                <table class="data-table">
                    <thead>
                        <tr>
                            <th>Timeframe</th>
                            <th>Candles</th>
                            <th>Status</th>
                        </tr>
                    </thead>
                    <tbody>
            `;

            timeframes.forEach(tf => {
                const statusClass = tf.quality === 'EXCELLENT' ? 'excellent' :
                                   tf.quality === 'GOOD' ? 'good' :
                                   tf.quality === 'FAIR' ? 'fair' : 'poor';

                html += `
                    <tr>
                        <td><strong>${tf.timeframe}</strong></td>
                        <td>${tf.estimated_candles}</td>
                        <td>
                            <span class="status-badge ${statusClass}">
                                ${tf.status}
                            </span>
                        </td>
                    </tr>
                `;
            });

            html += `
                    </tbody>
                </table>
            `;

            container.innerHTML = html;
        }

        async function calculateCustomTimeframe() {
            const minutes = parseInt(document.getElementById('customMinutes').value);
            const sourceCandles = parseInt(document.getElementById('sourceCandles').value);

            if (!minutes) {
                alert('Please enter a target timeframe in minutes');
                return;
            }

            try {
                const response = await fetch(`${API_URL}/timeframes/calculate`, {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({ minutes, source_candles: sourceCandles })
                });

                const data = await response.json();

                const container = document.getElementById('customTimeframeResult');

                if (data.success) {
                    const calc = data.calculation;
                    const statusClass = calc.quality === 'EXCELLENT' ? 'excellent' :
                                       calc.quality === 'GOOD' ? 'good' :
                                       calc.quality === 'FAIR' ? 'fair' : 'poor';

                    container.innerHTML = `
                        <div class="metric-card">
                            <div class="metric-label">Result: ${calc.timeframe}</div>
                            <div class="metric-value">${calc.estimated_candles}</div>
                            <div class="metric-change neutral">candles available</div>
                            <div style="margin-top: 12px;">
                                <span class="status-badge ${statusClass}">
                                    ${calc.status}
                                </span>
                            </div>
                            ${calc.warning ? `
                                <div class="alert alert-warning" style="margin-top: 12px; font-size: 12px;">
                                    <span>‚ö†Ô∏è</span>
                                    <span>${calc.warning}</span>
                                </div>
                            ` : ''}
                        </div>
                    `;
                } else {
                    container.innerHTML = `
                        <div class="alert alert-error">
                            <span>‚ùå</span>
                            <span>${data.error}</span>
                        </div>
                    `;
                }
            } catch (error) {
                document.getElementById('customTimeframeResult').innerHTML = `
                    <div class="alert alert-error">
                        <span>‚ùå</span>
                        <span>Error: ${error.message}</span>
                    </div>
                `;
            }
        }

        async function getTimeframeRecommendations() {
            const symbol = document.getElementById('tfSymbolSelect').value;
            const strategy = document.getElementById('strategySelect').value;

            if (!symbol) {
                alert('Please select a symbol first');
                return;
            }

            const container = document.getElementById('recommendationsContainer');
            container.innerHTML = '<div class="spinner"></div>';

            try {
                const response = await fetch(`${API_URL}/timeframes/recommend?symbol=${encodeURIComponent(symbol)}&strategy=${strategy}`);
                const data = await response.json();

                if (data.success) {
                    container.innerHTML = `
                        <div class="alert alert-success">
                            <span>üí°</span>
                            <span><strong>Strategy: ${data.strategy.charAt(0).toUpperCase() + data.strategy.slice(1)}</strong></span>
                        </div>
                        <div class="metric-card">
                            <div class="metric-label">Recommended Timeframes</div>
                            <div class="metric-value" style="font-size: 20px;">
                                ${data.recommendations.join(', ')}
                            </div>
                            <div class="metric-change neutral" style="margin-top: 12px;">
                                Required: ${data.requirements.required_5m_candles} candles (5m) =
                                ${data.requirements.required_days} days of data
                            </div>
                        </div>
                    `;
                } else {
                    container.innerHTML = `
                        <div class="alert alert-error">
                            <span>‚ùå</span>
                            <span>${data.error}</span>
                        </div>
                    `;
                }
            } catch (error) {
                container.innerHTML = `
                    <div class="alert alert-error">
                        <span>‚ùå</span>
                        <span>Error: ${error.message}</span>
                    </div>
                `;
            }
        }

        // ========================================================================
        // TAB 3: DATA QUALITY
        // ========================================================================

        async function runQualityCheck() {
            const container = document.getElementById('qualityMatrixContainer');
            container.innerHTML = '<div class="spinner"></div>';

            try {
                const response = await fetch(`${API_URL}/quality/system`);
                const data = await response.json();

                if (data.success) {
                    displayQualityData(data.assessment);
                } else {
                    container.innerHTML = `
                        <div class="alert alert-error">
                            <span>‚ùå</span>
                            <span>${data.error}</span>
                        </div>
                    `;
                }
            } catch (error) {
                container.innerHTML = `
                    <div class="alert alert-error">
                        <span>‚ùå</span>
                        <span>Error: ${error.message}</span>
                    </div>
                `;
            }
        }

        function displayQualityData(assessment) {
            // Update metrics
            document.getElementById('overallQualityScore').textContent = `${assessment.average_score}/100`;
            document.getElementById('readyAssets').textContent = `${assessment.ready_count}/${assessment.total_assessments}`;
            document.getElementById('systemHealthStatus').textContent = assessment.system_ready ? '‚úÖ READY' : '‚ö†Ô∏è NOT READY';
            document.getElementById('qualityCheckTime').textContent = new Date().toLocaleTimeString();

            const statusClass = assessment.overall_status === 'HEALTHY' ? 'positive' :
                               assessment.overall_status === 'DEGRADED' ? 'neutral' : 'negative';
            document.getElementById('qualityStatus').className = `metric-change ${statusClass}`;
            document.getElementById('qualityStatus').textContent = assessment.overall_status;

            // Display matrix
            const container = document.getElementById('qualityMatrixContainer');

            let html = '<table class="data-table"><thead><tr><th>Symbol</th><th>Timeframe</th><th>Score</th><th>Status</th><th>Issues</th></tr></thead><tbody>';

            for (const [symbol, timeframes] of Object.entries(assessment.results)) {
                for (const [tf, result] of Object.entries(timeframes)) {
                    const statusClass = result.status === 'EXCELLENT' ? 'excellent' :
                                       result.status === 'GOOD' ? 'good' :
                                       result.status === 'FAIR' ? 'fair' : 'poor';

                    html += `
                        <tr>
                            <td><strong>${symbol}</strong></td>
                            <td>${tf}</td>
                            <td>${result.overall_score}/100</td>
                            <td>
                                <span class="status-badge ${statusClass}">
                                    ${result.status_emoji} ${result.status}
                                </span>
                            </td>
                            <td>${result.issues ? result.issues.join('; ') : 'None'}</td>
                        </tr>
                    `;
                }
            }

            html += '</tbody></table>';
            container.innerHTML = html;
        }

        async function assessSymbolQuality() {
            const symbol = document.getElementById('qualitySymbolSelect').value;
            if (!symbol) {
                alert('Please select a symbol');
                return;
            }

            const container = document.getElementById('detailedQualityContainer');
            container.innerHTML = '<div class="spinner"></div>';

            try {
                const response = await fetch(`${API_URL}/quality/assess`, {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({ symbol, timeframe: '5m' })
                });

                const data = await response.json();

                if (data.success) {
                    displayDetailedQuality(data.assessment);
                } else {
                    container.innerHTML = `
                        <div class="alert alert-error">
                            <span>‚ùå</span>
                            <span>${data.error}</span>
                        </div>
                    `;
                }
            } catch (error) {
                container.innerHTML = `
                    <div class="alert alert-error">
                        <span>‚ùå</span>
                        <span>Error: ${error.message}</span>
                    </div>
                `;
            }
        }

        function displayDetailedQuality(assessment) {
            const container = document.getElementById('detailedQualityContainer');

            const statusClass = assessment.status === 'EXCELLENT' ? 'excellent' :
                               assessment.status === 'GOOD' ? 'good' :
                               assessment.status === 'FAIR' ? 'fair' : 'poor';

            let html = `
                <div class="metric-card" style="margin-bottom: 20px;">
                    <div class="metric-label">${assessment.symbol} - ${assessment.timeframe}</div>
                    <div class="metric-value">${assessment.overall_score}/100</div>
                    <span class="status-badge ${statusClass}">
                        ${assessment.status_emoji} ${assessment.status}
                    </span>
                </div>

                <h3 style="margin-bottom: 16px;">Quality Breakdown</h3>
            `;

            for (const [metric, data] of Object.entries(assessment.breakdown)) {
                const metricClass = data.percentage >= 90 ? 'excellent' :
                                   data.percentage >= 70 ? 'good' :
                                   data.percentage >= 50 ? 'fair' : 'poor';

                html += `
                    <div class="metric-card" style="margin-bottom: 12px;">
                        <div style="display: flex; justify-content: space-between; align-items: center; margin-bottom: 8px;">
                            <div class="metric-label">${metric.replace(/_/g, ' ').toUpperCase()}</div>
                            <div><strong>${data.score}/${data.max}</strong></div>
                        </div>
                        <div class="progress-bar">
                            <div class="progress-fill ${metricClass}" style="width: ${data.percentage}%;"></div>
                        </div>
                        <div style="margin-top: 8px; font-size: 12px; color: #a1a1aa;">
                            ${data.status} ${data.details.status || ''}
                        </div>
                    </div>
                `;
            }

            if (assessment.issues.length > 0) {
                html += `
                    <div class="alert alert-warning" style="margin-top: 20px;">
                        <span>‚ö†Ô∏è</span>
                        <div>
                            <strong>Issues Found:</strong><br>
                            ${assessment.issues.map(issue => `‚Ä¢ ${issue}`).join('<br>')}
                        </div>
                    </div>
                `;
            }

            if (assessment.recommendations.length > 0) {
                html += `
                    <div class="alert alert-info" style="margin-top: 12px;">
                        <span>üí°</span>
                        <div>
                            <strong>Recommendations:</strong><br>
                            ${assessment.recommendations.map(rec => `‚Ä¢ ${rec}`).join('<br>')}
                        </div>
                    </div>
                `;
            }

            container.innerHTML = html;
        }

        // ========================================================================
        // TAB 4: LIVE SIGNALS
        // ========================================================================

        async function runSignalScan() {
            const useClaude = document.getElementById('useClaudeCheckbox').checked;
            const useCache = document.getElementById('useCacheCheckbox').checked;

            const container = document.getElementById('signalsContainer');
            container.innerHTML = `
                <div class="empty-state">
                    <div class="spinner"></div>
                    <div class="empty-title">Scanning markets...</div>
                    <div class="empty-text">This may take 30-60 seconds</div>
                </div>
            `;

            try {
                const response = await fetch(`${API_URL}/scan`, {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({
                        min_score: 75,
                        use_claude: useClaude,
                        use_cache: useCache
                    })
                });

                const data = await response.json();

                if (data.success) {
                    displaySignals(data.signals, data.scan_info);
                    document.getElementById('signalCount').textContent = data.scan_info.qualified_signals;
                } else {
                    container.innerHTML = `
                        <div class="alert alert-error">
                            <span>‚ùå</span>
                            <span>${data.error}</span>
                        </div>
                    `;
                }
            } catch (error) {
                container.innerHTML = `
                    <div class="alert alert-error">
                        <span>‚ùå</span>
                        <span>Error: ${error.message}</span>
                    </div>
                `;
            }
        }

        function displaySignals(signals, scanInfo) {
            const container = document.getElementById('signalsContainer');

            if (signals.length === 0) {
                container.innerHTML = `
                    <div class="empty-state">
                        <div class="empty-icon">üì≠</div>
                        <div class="empty-title">No Qualified Signals</div>
                        <div class="empty-text">All assets scored below 75</div>
                    </div>
                `;
                return;
            }

            let html = `
                <div class="alert alert-success" style="margin-bottom: 20px;">
                    <span>‚úÖ</span>
                    <span>Found ${signals.length} qualified signal(s) in ${scanInfo.duration_seconds.toFixed(1)}s</span>
                </div>
            `;

            signals.forEach((signal, i) => {
                const score = signal.enhanced_score || signal.score;
                const hasClaude = !!signal.claude_analysis;
                const direction = signal.direction === 'long' ? 'LONG üìà' : 'SHORT üìâ';
                const directionClass = signal.direction === 'long' ? 'positive' : 'negative';

                html += `
                    <div class="metric-card" style="margin-bottom: 16px;">
                        <div style="display: flex; justify-content: space-between; align-items: start; margin-bottom: 12px;">
                            <div>
                                <div class="metric-label">#${i + 1} - ${signal.symbol}</div>
                                <div class="metric-value" style="font-size: 24px;">${score}/194</div>
                                <span class="status-badge ${directionClass === 'positive' ? 'excellent' : 'poor'}">
                                    ${direction}
                                </span>
                                ${hasClaude ? `
                                    <span class="status-badge good" style="margin-left: 8px;">
                                        üß† Claude ${(signal.claude_analysis.confidence * 100).toFixed(0)}%
                                    </span>
                                ` : ''}
                            </div>
                            <div style="text-align: right;">
                                <div style="font-size: 12px; color: #a1a1aa;">Entry</div>
                                <div style="font-size: 18px; font-weight: 700;">$${signal.current_price.toFixed(4)}</div>
                            </div>
                        </div>

                        <div class="grid grid-3" style="gap: 12px;">
                            <div>
                                <div style="font-size: 11px; color: #a1a1aa;">Stop Loss</div>
                                <div style="font-size: 14px; font-weight: 600; color: #ef4444;">
                                    $${signal.stop_loss.toFixed(4)}
                                </div>
                            </div>
                            <div>
                                <div style="font-size: 11px; color: #a1a1aa;">Take Profit</div>
                                <div style="font-size: 14px; font-weight: 600; color: #10b981;">
                                    $${signal.take_profit.toFixed(4)}
                                </div>
                            </div>
                            <div>
                                <div style="font-size: 11px; color: #a1a1aa;">Leverage</div>
                                <div style="font-size: 14px; font-weight: 600;">
                                    ${signal.leverage}x
                                </div>
                            </div>
                        </div>

                        ${hasClaude && signal.claude_analysis.justification ? `
                            <div class="alert alert-info" style="margin-top: 12px; font-size: 12px;">
                                <span>üß†</span>
                                <span>${signal.claude_analysis.justification}</span>
                            </div>
                        ` : ''}
                    </div>
                `;
            });

            container.innerHTML = html;
        }

        // ========================================================================
        // TAB 5: CLAUDE AI
        // ========================================================================

        async function loadClaudeData() {
            try {
                // Load Claude queue status
                const statusResponse = await fetch(`${API_URL}/claude/queue/status`);
                const statusData = await statusResponse.json();

                if (statusData.success) {
                    const status = statusData.status;
                    document.getElementById('claudeValidations').textContent = status.validations_today;
                    document.getElementById('claudeMaxValidations').value = status.max_validations;

                    // Update limit text
                    document.querySelector('#claudeValidations').nextElementSibling.textContent =
                        `/ ${status.max_validations} limit`;
                }

                // Load Claude performance
                const perfResponse = await fetch(`${API_URL}/claude/performance`);
                const perfData = await perfResponse.json();

                if (perfData.success && perfData.performance.total_validations > 0) {
                    const perf = perfData.performance;

                    // Display average confidence
                    const avgConf = (perf.avg_confidence * 100).toFixed(0);
                    document.getElementById('claudeConfidence').textContent = `${avgConf}%`;

                    // Display win rate impact (enhancement)
                    const impact = perf.avg_enhancement > 0 ? `+${perf.avg_enhancement.toFixed(1)}` : perf.avg_enhancement.toFixed(1);
                    document.getElementById('claudeImpact').textContent = impact;
                }

                // Load current settings
                const settingsResponse = await fetch(`${API_URL}/claude/settings`);
                const settingsData = await settingsResponse.json();

                if (settingsData.success) {
                    document.getElementById('claudeMinScore').value = settingsData.settings.min_score_for_validation;
                    document.getElementById('claudeMaxValidations').value = settingsData.settings.max_validations_per_day;
                }

            } catch (error) {
                console.error('Error loading Claude data:', error);
            }
        }

        async function saveClaudeSettings() {
            const minScore = parseInt(document.getElementById('claudeMinScore').value);
            const maxValidations = parseInt(document.getElementById('claudeMaxValidations').value);

            // Validation
            if (minScore < 50 || minScore > 194) {
                alert('‚ö†Ô∏è Minimum score must be between 50 and 194');
                return;
            }

            if (maxValidations < 1 || maxValidations > 100) {
                alert('‚ö†Ô∏è Max validations must be between 1 and 100');
                return;
            }

            try {
                const response = await fetch(`${API_URL}/claude/settings`, {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({
                        min_score_for_validation: minScore,
                        max_validations_per_day: maxValidations
                    })
                });

                const data = await response.json();

                if (data.success) {
                    alert('‚úÖ Settings saved successfully!');
                    await loadClaudeData(); // Reload to show updated settings
                } else {
                    alert(`‚ùå Error: ${data.error}`);
                }
            } catch (error) {
                alert(`‚ùå Error: ${error.message}`);
            }
        }

        // Initialize on page load
        window.addEventListener('DOMContentLoaded', init);
    </script>
</body>
</html>
