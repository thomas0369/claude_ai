import { NextRequest, NextResponse } from 'next/server';
import { z } from 'zod';
import { getLevelById, getLevelByNumber } from '@/lib/game/levels/levelService';
import { handleError, formatErrorResponse } from '@/lib/utils/error-handling';
import { validateLevelId, formatValidationError } from '@/lib/utils/api-validation';
import { apiLogger } from '@/lib/utils/logger';

export async function GET(
  request: NextRequest,
  { params }: { params: Promise<{ id: string }> }
) {
  try {
    const { id } = await params;

    // Validate and determine ID type (CUID or level number)
    let validatedId;
    try {
      validatedId = validateLevelId(id);
    } catch (error) {
      apiLogger.warn('Invalid level ID format', { id, error });
      if (error instanceof z.ZodError) {
        return NextResponse.json(formatValidationError(error), { status: 400 });
      }
      throw error;
    }

    apiLogger.debug('Fetching level by ID', validatedId);

    let level;
    if (validatedId.type === 'number') {
      level = await getLevelByNumber(validatedId.value as number);
    } else {
      level = await getLevelById(validatedId.value as string);
    }

    return NextResponse.json({ level }, { status: 200 });
  } catch (error) {
    if (error instanceof z.ZodError) {
      return NextResponse.json(formatValidationError(error), { status: 400 });
    }

    const appError = handleError(error);
    apiLogger.error('Error fetching level by ID', appError);
    return NextResponse.json(formatErrorResponse(appError), { status: appError.statusCode });
  }
}
