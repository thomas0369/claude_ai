{
  "env": {
    "BASH_DEFAULT_TIMEOUT_MS": "1800000",
    "BASH_MAX_TIMEOUT_MS": "7200000"
  },
  "permissions": {
    "allow": [
      "Read",
      "Write(src/**)",
      "Bash(git:*)",
      "Bash(npm:*)",
      "Bash(npx:*)",
      "WebSearch",
      "WebFetch(domain:bundlephobia.com)",
      "WebFetch(domain:)",
      "Read(//home/thoma/**)",
      "WebFetch(domain:www.reddit.com)",
      "WebFetch(domain:github.com)",
      "WebFetch(domain:code.claude.com)",
      "SlashCommand(/create-subagent)",
      "WebFetch(domain:bsvblockchain.org)",
      "WebFetch(domain:bsvassociation.org)",
      "SlashCommand(/thomas-fix)"
    ],
    "deny": [
      "Read(.env*)",
      "Read(secrets/**)",
      "Write(.env*)"
    ]
  },
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Read|Edit|MultiEdit|Write|Bash",
        "hooks": [
          {
            "type": "command",
            "command": "claudekit-hooks run file-guard"
          },
          {
            "type": "command",
            "command": "~/.claude/hooks/safe-hook-wrapper.sh ~/.claude/hooks/skill-auto-activation.sh"
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Edit|MultiEdit|Write",
        "hooks": [
          {
            "type": "command",
            "command": "~/.claude/hooks/post-tool-use-tracker.sh"
          }
        ]
      },
      {
        "matcher": "Bash|Read|Edit|Write|MultiEdit",
        "hooks": [
          {
            "type": "command",
            "command": "~/.claude/hooks/safe-hook-wrapper.sh ~/.claude/hooks/error-auto-triage.sh"
          }
        ]
      }
    ],
    "Stop": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "~/.claude/hooks/safe-hook-wrapper.sh ~/.claude/hooks/auto-stop-keepalive.sh"
          },
          {
            "type": "command",
            "command": "~/.claude/hooks/safe-hook-wrapper.sh ~/.claude/hooks/todo-reminder.sh"
          }
        ]
      }
    ],
    "SubagentStop": [],
    "SessionStart": [],
    "UserPromptSubmit": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "~/.claude/hooks/auto-start-keepalive.sh"
          },
          {
            "type": "command",
            "command": "claudekit-hooks run thinking-level"
          }
        ]
      }
    ]
  },
  "enabledPlugins": {
    "playwright-skill@playwright-skill": true
  },
  "spinnerTipsEnabled": false,
  "alwaysThinkingEnabled": false
}
